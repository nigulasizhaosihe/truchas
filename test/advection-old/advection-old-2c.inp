THREE-FLUID 2D ADVECTION
------------------------
Advection in a multi-fluid 2D domain with uniform constant velocity directed
diagonally across mesh. One fluid lies outside a disk, and two other fluids
fill the disk with a planar interface between them. Domain is 31x31x1 with
unit cells.


&OUTPUTS
  output_t  = 0.0, 2.0
  output_dt = 2.0
/

&MESH
  mesh_file = 'mesh2a.gen'
/
 
&PHYSICS
  materials = 'water', 'oil', 'void'
  legacy_flow = .true.
/

&ADVECTION_VELOCITY
  velocity_constant = 4.0, 3.0, 0.0
/

&NUMERICS
  dt_constant = 0.03125
  !dt_grow = 1.1
/

&LEGACY_FLOW
  applyflow = .true.
  material_priority = "void", "oil", "water"
  courant_number = 0.5
  volume_track_subcycles = 4
/

&BODY
  surface_name = 'cylinder'
  fill = 'outside'
  axis = 'z'
  height = 5
  radius = 8
  translation_pt = -4.0, -3.0, -2.5
  material_name = 'void'
  temperature = 0.0
/

&BODY
  surface_name = 'plane'
  axis = 'x'
  translation_pt = -4.0, -3.0, 0.0
  material_name = 'oil'
  temperature = 0.0
/


&BODY
  surface_name = 'background'
  material_name = 'water'
  temperature = 0.0
/

&MATERIAL
  name = 'water'
  is_fluid = T
  density = 1.0
/

&MATERIAL
  name = 'oil'
  is_fluid = T
  density = 2.0
/

&MATERIAL
  name = 'void'
  is_fluid = T
  density = 1.e-3
/
