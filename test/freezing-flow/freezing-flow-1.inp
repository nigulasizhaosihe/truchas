FREEZING STATIONARY FLUID
-------------------------
A column of fluid that freezes from the bottom up.
Flow is enabled, but the fluid should remain stationary. This is a
basic sanity check for coupling flow to phase change.

Problem starts with fluid, then solid/fluid, and finally
solid with no fluid present.

&MESH
  mesh_file = 'mesh1.g'
/

&OUTPUTS
  Output_T = 0.0, 0.2, 2.5
  Output_Dt = 0.2, 2.5
/

&PHYSICS
  materials = 'water'
  heat_transport = .true.
  flow = .true.
/

&FLOW
  inviscid = .true.
  courant_number = 0.25
  vol_track_subcycles = 2
  nested_dissection = .false.
/

&FLOW_PRESSURE_SOLVER
  rel_tol = 0.0
  abs_tol = 1.0e-12
  max_ds_iter = 50
  max_amg_iter = 25
  krylov_method = 'cg'
/

&FLOW_BC
  name = 'all'
  type = 'free-slip'
  face_set_ids = 1, 2, 3
/

&DIFFUSION_SOLVER
  abs_temp_tol       = 0.0
  rel_temp_tol       = 1.0e-5
  abs_enthalpy_tol   = 0.0
  rel_enthalpy_tol   = 1.0e-5
  max_nlk_itr        = 5
  nlk_tol            = 0.05
  nlk_preconditioner = 'hypre_amg'
  verbose_stepping   = .true.
/

&NUMERICS
  dt_init = 1.0d-4
  dt_min  = 1.0d-9
  dt_max  = 2.0d-2
  dt_grow = 5.0
/

&THERMAL_BC
  name = 'left end'
  face_set_ids = 1
  type = 'temperature'
  temp_func = 'end-temp'
/

&FUNCTION
 name = 'end-temp'
 type = 'tabular'
 tabular_data(1,:) = 0.0, 0.2, 0.3, 0.4
 tabular_data(2,:) = 7.0, 1.0, 1.0, 1.0
 tabular_interp = 'akima'
/

&THERMAL_BC
  name = 'adiabatic'
  face_set_ids = 2, 3
  type = 'flux'
  flux = 0.0
/

Liquid everywhere
&BODY
  surface_name = 'background'
  material_name = 'liquid'
  temperature = 7.0
  velocity = 3*0.0
/


&MATERIAL
  name = 'water'
  density = 4.0
  specific_heat = 0.25
  conductivity = 5.0
  phases = 'solid', 'liquid'
/

&PHASE
  name = 'liquid'
  is_fluid = T
/

&PHASE_CHANGE
  low_temp_phase = 'solid'
  high_temp_phase = 'liquid'
  solidus_temp = 4.5
  liquidus_temp = 6.5
  latent_heat = 2.0
/
