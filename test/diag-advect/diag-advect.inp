&OUTPUTS
  output_t  = 0.0, 1.0
  output_dt = 0.2
/

&MESH
  mesh_file = 'square-32x32.g'
/
 
&PHYSICS
  materials = 'oil', 'water'
  legacy_flow = .true.
/

&ADVECTION_VELOCITY
  velocity_constant = 0.4, 0.3, 0.0
/

&NUMERICS
  !dt_constant = 0.025
  dt_init = 0.025
  dt_grow = 1.05
  dt_min  = 0.01
  dt_max  = 0.1
/

&LEGACY_FLOW
  applyflow  = .true.
  courant_number = 0.5
  volume_track_subcycles = 4
/

&BODY
  surface_name = 'cylinder'
  axis = 'z'
  fill = 'inside'
  translation_pt = 0.3, 0.35, -0.5
  radius = 0.15
  height = 1.0
  material_name = 'oil'
  temperature = 0.0
/

&BODY
  surface_name = 'background'
  material_name = 'water'
  temperature = 0.0
/

&MATERIAL
  name = 'oil'
  is_fluid = T
  density = 1.0
/

&MATERIAL
  name = 'water'
  is_fluid = T
  density = 1.0
/
